{
    "name": "secret-chat-backend",
    "version": "2.0.1",
    "description": "Backend for Secret Chat",
    "main": "index.js",
    "private": true,
    "scripts": {
        "seed": "node ./tests/seed/seed.js",
        "test:watch": "jest --coverage --config ./jest.config.js --notify --watchAll",
        "test:local": "jest --coverage --config ./jest.config.js --notify",
        "test:ci": "jest --coverage --config ./jest.config.js --forceExit",
        "dev": "nodemon index.js",
        "start": "node index.js",
        "deploy": "gcloud run deploy secret-chat-api --image gcr.io/memo-fb041/secret-chat-api --platform managed  --region europe-west1 --allow-unauthenticated",
        "docker:build": "docker buildx build --platform linux/amd64 -t secret-chat-api .",
        "docker:tag": "docker tag secret-chat-api gcr.io/memo-fb041/secret-chat-api",
        "docker:push": "docker push gcr.io/memo-fb041/secret-chat-api",
        "docker:deploy": "npm run docker:build && npm run docker:tag && npm run docker:push"
    },
    "author": "Stanislav Khatko <stanislavkhatko@gmail.com>",
    "license": "MIT",
    "dependencies": {
        "bcryptjs": "^2.4.3",
        "body-parser": "^1.18.3",
        "compression": "^1.7.4",
        "cors": "^2.8.5",
        "dotenv": "^16.4.5",
        "eslint": "^9.3.0",
        "eslint-config-prettier": "^9.1.0",
        "eslint-plugin-prettier": "^5.1.3",
        "express": "^4.16.3",
        "express-sslify": "^1.2.0",
        "express-validator": "^5.3.0",
        "gravatar": "^1.8.0",
        "helmet": "^7.1.0",
        "jest": "^29.7.0",
        "jsonwebtoken": "^9.0.2",
        "mongoose": "^8.4.0",
        "nodemon": "^3.1.1",
        "passport": "^0.7.0",
        "passport-facebook": "^3.0.0",
        "passport-google-oauth": "^2.0.0",
        "passport-jwt": "^4.0.0",
        "prettier": "^3.2.5",
        "slugify": "^1.3.4",
        "socket.io": "^4.7.5",
        "supertest": "^7.0.0",
        "vue-server-renderer": "^2.6.10"
    },
    "devDependencies": {
        "morgan": "^1.9.1",
        "winston": "^3.1.0"
    }
}
